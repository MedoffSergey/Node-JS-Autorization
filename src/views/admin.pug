include modules/main
  body
  .container  
    .row.justify-content-center.text-center
      
      h3.my-3 Вы вошли как Администратор    
      .btn-group.my-2.ml-4(role='group', aria-label='Basic example')
        button.btn.btn-secondary(type='button',onClick='location.href="http:/"') Перейти на главную

    
      
    table.table.table-bordered.box-shadow
      thead
        tr.text-center.box-shadow
          th.box-shadow(scope='col') Id
          th.box-shadow(scope='col') Name
          th.box-shadow(scope='col') Login
          th.box-shadow(scope='col') Password
          
      for val in userList
          tbody
            tr.text-center
              th.box-shadow(scope='row')= val.id
              td.box-shadow= val.name
              td.box-shadow= val.login
              td.box-shadow= val.password    
              
    
      .row.justify-content-center.text-center
        .card.col-4.my-5.box-shadow
          .card-body
            form
              .form-group
                h4.text-left Add new user
                label.col-form-label(for='exampleInputName') Name
                input#addInputName.form-control(type='text' placeholder='Ivan')
                label.col-form-label(for='exampleInputLogin') Login
                input#addInputLogin.form-control(type='text' placeholder='Vanek')
                label.col-form-label(for='exampleInputPassword') Password
                input#addInputPassword.form-control(type='text' placeholder='***********')
                  
            button.btn.btn-success.float-right(type='button' onclick = 'addNewUser()') Добавить           
            
  
            
    script(src="script.js")
  style
    include style.css
      
