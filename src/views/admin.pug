html
  head
    title= title
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")  
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
      
  body
  .container  
    .row.justify-content-center.text-center
    
      h3.my-3 Вы вошли как Администратор    
      
    h3.text-center User base
      
    table.table.table-bordered
      thead
        tr.text-center
          th(scope='col') Id
          th(scope='col') Name
          th(scope='col') Login
          th(scope='col') Password
          
      for val in userList
      
          
          tbody
            tr
              th(scope='row')= val.id
              td= val.name
              td= val.login
              td= val.password    
              
    .container  
      .row.justify-content-center.text-center
        .card.col-4.my-5
          .card-body
            form
              .form-group
                h4.text-left Add new user
                label.col-form-label(for='exampleInputName') Name
                input#addInputName.form-control(type='text' placeholder='Ivan')
                label.col-form-label(for='exampleInputLogin') Login
                input#addInputLogin.form-control(type='text' placeholder='Vanek')
                label.col-form-label(for='exampleInputPassword') Password
                input#addInputPassword.form-control(type='text' placeholder='***********')
                  
            button.btn.btn-success.float-right(type='button' onclick = 'addNewUser()') Добавить           
            
  
            
    script(src="script.js")
  style
    include style.css
      
